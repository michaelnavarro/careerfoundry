<div class="container-inner">
	<h1>Contact Us</h1>

	<%= form_tag(contact_thanks_path, method: "get") do %>
	  <p>
	  	<%= label_tag(:name, "Name:") %>
	  	<%= text_field_tag(:name) %>
	  </p>
	  <p>
	  	<%= label_tag(:email, "E-mail:") %>
	  	<%= text_field_tag(:email) %>
	  </p>
	  <p>
	  	<%= label_tag(:message, "Message:") %>
	  	<%= text_area_tag(:message) %>
	  </p>
	  <p>
	  	<%= submit_tag("Submit") %>
	  </p>
	<% end %>

</div>